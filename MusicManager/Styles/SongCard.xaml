<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <DataTemplate x:Key="SongCard">
        <StackPanel Orientation="Vertical"
                    Width="100"
                    Height="150"
                    Background="#18181b"
                    >
            <Image Source="{Binding Path=CoverImage}"
                   Stretch="Fill"
                   Height="100"
                   Width="100"
                   />
            <TextBlock Text="{Binding Path=Title}"
                       Margin="5,10,0,0"
                       FontSize="14"
                       Foreground="White"
                       FontWeight="SemiBold"
                       Padding="0"/>
            <TextBlock Text="{Binding Path=Artist.Name}" FontSize="12"
                       Foreground="White"
                       FontWeight="Light"
                       Margin="5,0,0,0"
                       Padding="0"/>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>